{
  "name": "fast-food-fast",
  "version": "1.0.0",
  "description": "Fast Food Fast Nodejs API endpoints to power the fast food fast web app client",
  "main": "./server/server.js",
  "scripts": {
    "build": "babel ./server/server.js --out-dir build",
    "dev-start": "babel-watch ./server/server.js",
    "start": "babel-watch ./server/server.js",
    "cover": "istanbul cover node_modules/mocha/bin/_mocha -- -R spec --compilers js:babel-core/register ./server/test/test.js",
    "test": "set NODE_ENV=test && nyc --reporter=html --reporter=text --reporter=lcov mocha ./server/test/test.js --compilers js:babel-core/register --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "migrate-up": "node server/migration createAllTables",
    "migrate-down": "node server/migration dropAllTables"
  },
  "nyc": {
    "exclude": [
      "build"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henperi/Fast-Food-Fast.git"
  },
  "keywords": [
    "Food",
    "Delivery",
    "Order",
    "Restaurant",
    "Instant",
    "App"
  ],
  "author": "Pereowei Henry Izontimi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/henperi/Fast-Food-Fast/issues"
  },
  "homepage": "https://github.com/henperi/Fast-Food-Fast#readme",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-validator": "^5.3.0",
    "jsonwebtoken": "^8.3.0",
    "make-runnable": "^1.3.6",
    "moment": "^2.22.2",
    "morgan": "^1.9.1",
    "pg": "^7.4.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^9.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-watch": "^2.0.7",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1"
  }
}
